@model WaveaccessTask.Models.Movie

@{
    ViewData["Title"] = "Details";
}

<h1>@Model.Title</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Description
        </dt>
        <dd class = "col-sm-10">
            @Model.Description
        </dd>
        <dt class = "col-sm-2">
            Release date
        </dt>
        <dd class = "col-sm-10">
            @Model.ReleaseDate
        </dd>
        <dt class = "col-sm-2">
            Rating
        </dt>
        <dd class = "col-sm-10">
            @Model.Rating
        </dd>
        <dt class = "col-sm-2">
            Actor cast
        </dt>
        <dd class = "col-sm-10">

            @foreach (var actor in Model.ActorCast)
            {
                <a asp-controller="Actors" asp-action="Details" asp-route-id="@actor.Id">
                    @Html.DisplayFor(modelItem => actor.Name)
                </a>
                <br />
            }
            
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Back to movies</a>
</div>
